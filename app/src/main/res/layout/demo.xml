<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/PP"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/username"
            android:layout_marginStart="20dp"
android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Username"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/points"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Points"
            android:textSize="20dp"
            />
        <HorizontalScrollView
            android:background="@color/green"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="412dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="412dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView334"
                    android:layout_width="412dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="TextView" />

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/ranking"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Rankings"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            />

        <HorizontalScrollView
            android:background="@color/green"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="116dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-black"
                    android:singleLine="true"
                    android:textSize="22dp"

                    app:autoSizeMaxTextSize="26dp"
                    app:autoSizeMinTextSize="24dp" />



                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/preview"/>
                <TextView
                    android:id="@+id/score"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="116dp"
                    android:layout_marginTop="35dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:singleLine="true"
                    android:text="venukljdafklajfkljadslkfjaklfjakl;jfklajdlklafjadklklsfje"

                    android:textColor="@color/black"
                    app:autoSizeMaxTextSize="26dp"
                    app:autoSizeMinTextSize="24dp" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/textView331"
                    android:layout_width="412dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView3341"
                    android:layout_width="412dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="TextView" />

            </LinearLayout>
        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/leaderboard"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="left"
                android:text="leaderboard" />

            <Button
                android:id="@+id/statistics"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:text="My Statistics" />

            <Button
                android:id="@+id/button4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:text="Button" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/green"
            android:background="@color/green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <Button
                android:background="@drawable/round"
                android:id="@+id/friends"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="left"
                android:text="friends" />

            <Button
                android:id="@+id/posts"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:text="posts" />

            <Button
                android:id="@+id/comp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:text="Button" />
        </androidx.cardview.widget.CardView>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>